<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory android:title=" AddOns Mod " />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Enable IME Notification" android:key="enable_ime_notif" android:defaultValue="true" android:summaryOn="Input method choice active" android:summaryOff="Input method choice hidden" app:rebootDevice="true"/>
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/lockscreen_notif_entries" android:title="Notifications Shown on Lockscreen" android:key="lockscreen_notifications" android:summary="Number shown on lockscreen" android:defaultValue="2" android:entryValues="@array/lockscreen_notif_values" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Make Ongoing Notifications Removable" android:key="ongoing_notifications" android:defaultValue="false" android:summaryOn="Ongoing Notifications are removeable" android:summaryOff="Ongoing Notifications are permanent" app:rebootDevice="true"/>
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Ambient Display" android:key="doze_toggle" android:defaultValue="true" android:summaryOn="Option enabled" android:summaryOff="Option disabled" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Power Saving Mode Notifications" android:key="psm_notif" android:defaultValue="true" android:summaryOn="Power Saving Mode notification is enabled" android:summaryOff="Power Saving Mode notification is disabled" />
    
	<PreferenceCategory android:title=" Home Button " />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Unlock screen Home button" android:key="wake_with_home key" android:summaryOn="Enabled" android:summaryOff="disabled" app:rebootDevice="true"/>
    
	<PreferenceCategory android:title="Fast Charge" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Fast Charging" android:key="adaptive_fast_charging" android:summary="Enable or disable Fast Charging" android:summaryOn="Enabled" android:summaryOff="disabled"  android:defaultValue="true" />
    
	<PreferenceCategory android:title="  Battery Percentage " />
	
	<com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Display Percentage" android:key="display_battery_percentage" android:defaultValue="0" android:summaryOn="Battery text shown" android:summaryOff="Battery text is hidden" />
	<com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Display inBattery Percentage" android:key="status_bar_show_battery_percent" android:defaultValue="1" android:summaryOn="Text shown" android:summaryOff="Text hidden" />
	
	<PreferenceCategory android:title=" VolumeCursor Mod " />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/pref_volume_cursor_titles" android:title="Volume keys move cursor (reboot required)" android:key="krypton_keyboard_volume_control" android:defaultValue="0" android:entryValues="@array/pref_volume_cursor_values" app:rebootDevice="true"/>
    
	<PreferenceCategory android:title=" SingleSwipe QuickPanel " />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Single swipe for Quickpanel" android:key="tweaks_qs_pulldown" android:defaultValue="true" android:summaryOn="Feature is enabled" android:summaryOff="Feature is disabled" />
    
	<PreferenceCategory android:title=" Heads Up Controlled " />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Heads Up Notifications" android:key="heads_up_notifications_enabled" android:defaultValue="0" android:summaryOn="Heads Up disabled" android:summaryOff="Heads Up enabled" />
    
	<PreferenceCategory android:title=" Remove Safe Volume " />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title=" Remove Safe Volume" android:key="volume_warning_toggle" android:summaryOn="Enabled" android:summaryOff="Disabled" app:rebootDevice="true"/>
    
	<PreferenceCategory android:title=" Remove USB PopUp " />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Remove USB Connected PopUp" android:key="usb_plugged" android:summaryOn="Enabled" android:summaryOff="Disabled" app:rebootDevice="true"/>
    
	<PreferenceCategory android:title=" Power Menu " />
    
	<com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Emergency Mode" android:key="power_emergency" android:defaultValue="false" android:summaryOn="Emergency mode will be shown" android:summaryOff="Currently removed" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Power Off" android:key="power_off" android:defaultValue="true" android:summaryOn="Power off is shown in menu" android:summaryOff="Removed" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Restart Menu" android:key="restart_menu" android:defaultValue="true" android:summaryOn="Restart menu is shown in menu" android:summaryOff="Removed" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Recovery Mode" android:key="reboot_recovery" android:defaultValue="false" android:summaryOn="Reboot Recovery will be shown" android:summaryOff="Currently removed" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Flashlight" android:key="flashlight" android:defaultValue="false" android:summaryOn="Flashlight is shown in menu" android:summaryOff="Removed" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Screen Recorder" android:key="screen_record" android:defaultValue="false" android:summaryOn="Screenrecorder is shown in menu" android:summaryOff="Removed" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Screenshot" android:key="screenshot" android:defaultValue="false" android:summaryOn="Screenshot is shown in menu" android:summaryOff="Removed" />
    
	<PreferenceCategory android:title=" Settings Mode " />
	
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Hide QuickSettings Favorites" android:key="modcfg_hide_qs_favorites" android:defaultValue="false" android:summaryOn="Hidden" android:summaryOff="Shown" />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/dashboard_fav_columns_entries" android:title="Amount of Columns in Favorite Section" android:key="favorite_columns" android:entryValues="@array/dashboard_fav_columns_values" />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/dashboard_cat_columns_entries" android:title="Amount of Columns in Category Section" android:key="category_columns" android:entryValues="@array/dashboard_cat_columns_values" />
    
	<com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Settings Favorites Text Color" android:key="favs_text_color" android:summary="Choose favorites text color" android:defaultValue="\#ff000000" hexValue="true" alphaSlider="true" />
    <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Settings Sections Text Color" android:key="settings_sections_text_color" android:summary="Choose Sections text color" android:defaultValue="\#ff000000" hexValue="true" alphaSlider="true" />
    
	<PreferenceCategory android:title=" Another Elements " />
    
	<CheckBoxPreference android:title="Quick Unlock" android:key="lockscreen_quick_unlock_control" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" />
    <CheckBoxPreference android:title="Pin Pad Scramble" android:key="lockscreen_scramble_pin_layout" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" />
    
	<com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Remove Last spoke" android:key="last_spoke" android:summaryOn="Option will not be shown" android:summaryOff="Option is shown" />
    <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Remove Last message" android:key="last_message" android:summaryOn="Option will not be shown" android:summaryOff="Option is shown" />
    
	<PreferenceCategory android:title=" Brightness  On/Off  " />
	
	<com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Brightness Slider" android:key="notification_panel_brightness_adjustment" android:defaultValue="true" android:summaryOn="Currently Shown" android:summaryOff="Currently Hidden" />
    
	<PreferenceCategory android:title=" Immersive Mode " />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/immersive_entries" android:title="Immersive Mode (Fullscreen)" android:key="policy_control" android:summary="%s" android:entryValues="@array/immersive_values" />


</PreferenceScreen>