    <PreferenceCategory android:title=" 6thGear Reboot ">

        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Gear reboot view visibility" android:key="gear_reboot_view_visibility" android:defaultValue="true" android:summaryOn="Enabled" android:summaryOff="Disabled" />
