    <PreferenceCategory android:title="Wallpaper Animation">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Wallpaper Tilt Effect" android:key="wallpaper_tilt_status" android:defaultValue="1" android:summaryOn="Enabled" android:summaryOff="Disabled" />
    
	</PreferenceCategory>
    
	
